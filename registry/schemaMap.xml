<!DOCTYPE schema_map [
	<!ELEMENT schema_map (schema+)>
	<!ELEMENT schema (alias+)>
		<!ATTLIST schema
			plugin CDATA #REQUIRED>
	<!ELEMENT alias (#PCDATA)>
		<!ATTLIST alias
			harvester CDATA #IMPLIED>
]>

<schema_map>
	<schema plugin="DublinCorePlugin">
		<alias harvester="OAIHarvesterPlugin">oai_dc</alias>
	</schema>
	<schema plugin="MarcPlugin">
		<alias harvester="OAIHarvesterPlugin">oai_marc</alias>
	</schema>
	<schema plugin="Rfc1807Plugin">
		<alias harvester="OAIHarvesterPlugin">oai_rfc1807</alias>
	</schema>
</schema_map>
