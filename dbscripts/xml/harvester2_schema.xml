<schema version="0.2">

	<!--
	  *
	  * TABLE version
	  *
	  -->
	<table name="versions">
		<field name="major" type="I4">
			<KEY/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="minor" type="I4">
			<KEY/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="revision" type="I4">
			<KEY/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="build" type="I4">
			<KEY/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="date_installed" type="T">
			<NOTNULL/>
		</field>
		<field name="current" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<descr>Harvester2 installation and upgrade version history.</descr>
	</table>

	<!--
	  *
	  * TABLE archives
	  *
	  -->
	<table name="archives">
		<field name="archive_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="harvester_plugin" type="C2" size="80">
			<NOTNULL/>
		</field>
		<field name="public_archive_id" type="C2" size="40"/>
		<field name="title" type="C2" size="255">
			<NOTNULL/>
		</field>
		<field name="url" type="C2" size="255">
			<NOTNULL/>
		</field>
		<field name="description" type="X"/>
		<index name="archive_public_id">
			<col>public_archive_id</col>
		</index>
		<descr>Archives and basic archive settings.</descr>
	</table>
	
	<!--
	  *
	  * TABLE sessions
	  *
	  -->
	<table name="sessions">
		<field name="session_id" type="C2" size="32">
			<KEY/>
		</field>
		<field name="ip_address" type="C2" size="15">
			<NOTNULL/>
		</field>
		<field name="user_agent" type="C2" size="255"/>
		<field name="created" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="last_used" type="I8">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="logged_in" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="remember" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="data" type="X">
			<NOTNULL/>
			<DEFAULT VALUE=""/>
		</field>
		<descr>Browser/user sessions and session data.</descr>
	</table>

	<!--
	  *
	  * TABLE records
	  *
	  -->
	<table name="records">
		<field name="record_id" type="I4">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="archive_id" type="I4">
			<NOTNULL/>
		</field>
		<field name="schema_plugin_id" type="I4">
			<NOTNULL/>
		</field>
		<field name="identifier" type="C2" size="255"/>
		<field name="datestamp" type="T"/>
	</table>

	<!--
	  *
	  * TABLE crosswalks
	  *
	  -->
	<table name="crosswalks">
		<field name="crosswalk_id" type="I4">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="public_crosswalk_id" type="C2" size="40"/>
		<field name="name" type="C2" size="60">
			<NOTNULL/>
		</field>
		<field name="type" type="I4">
			<NOTNULL/>
		</field>
		<field name="sortable" type="I4">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="seq" type="I4">
			<KEY/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="description" type="C2" size="255"/>
	</table>

	<!--
	  *
	  * TABLE crosswalk_fields
	  *
	  -->
	<table name="crosswalk_fields">
		<field name="crosswalk_id" type="I4">
			<KEY/>
		</field>
		<field name="raw_field_id" type="I4">
			<KEY/>
		</field>
		<field name="sortable" type="I4">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
	</table>

	<!--
	  *
	  * TABLE fields
	  *
	  -->
	<table name="raw_fields">
		<field name="raw_field_id" type="I4">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="name" type="C2" size="60">
			<NOTNULL/>
		</field>
		<field name="schema_plugin_id" type="I4">
			<NOTNULL/>
		</field>
		<index name="raw_field_symbolic_name">
			<col>name</col>
			<col>schema_plugin_id</col>
			<UNIQUE/>
		</index>
	</table>

	<!--
	  *
	  * TABLE schemas
	  *
	  -->
	<table name="schema_plugins">
		<field name="schema_plugin_id" type="I4">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="schema_plugin" type="C2" size="60">
			<NOTNULL/>
		</field>
		<index name="schema_plugin_name">
			<col>schema_plugin</col>
			<UNIQUE/>
		</index>
	</table>

	<!--
	  *
	  * TABLE entries
	  *
	  -->
	<table name="entries">
		<field name="entry_id" type="I4">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="record_id" type="I4">
			<NOTNULL/>
		</field>
		<field name="raw_field_id" type="I4">
			<NOTNULL/>
		</field>
		<field name="value" type="X"/>
		<index name="entry_unique_index">
			<col>record_id</col>
			<col>raw_field_id</col>
		</index>
		<index name="entry_value">
			<col>value(20)</col>
			<col>raw_field_id</col>
		</index>
	</table>

	<!--
	  *
	  * TABLE entry_attributes
	  *
	  -->
	<table name="entry_attributes">
		<field name="entry_id" type="I4">
			<KEY/>
		</field>
		<field name="name" type="C2" size="40">
			<KEY/>
		</field>
		<field name="value" type="X"/>
	</table>

	<!--
	  *
	  * TABLE plugin_settings
	  *
	  -->
	<table name="plugin_settings">
		<field name="plugin_name" type="C2" size="80">
			<KEY/>
		</field>
		<field name="setting_name" type="C2" size="80">
			<KEY/>
		</field>
		<field name="setting_value" type="X"/>
		<field name="setting_type" type="C2" size="6">
			<NOTNULL/>
			<descr>(bool|int|float|string|object)</descr>
		</field>
		<descr>Site settings.</descr>
		<index name="plugin_settings_plugin_name">
			<col>plugin_name</col>
		</index>
	</table>
	
	<!--
	  *
	  * TABLE archive_settings
	  *
	  -->
	<table name="archive_settings">
		<field name="archive_id" type="I8">
			<KEY/>
		</field>
		<field name="setting_name" type="C2" size="80">
			<KEY/>
		</field>
		<field name="setting_value" type="X"/>
		<field name="setting_type" type="C2" size="6">
			<NOTNULL/>
			<descr>(bool|int|float|string|object)</descr>
		</field>
		<descr>Site settings.</descr>
		<index name="archive_settings_archive_id">
			<col>archive_id</col>
		</index>
	</table>
	
	<!--
	  *
	  * TABLE site_settings
	  *
	  -->
	<table name="site_settings">
		<field name="setting_name" type="C2" size="80">
			<KEY/>
		</field>
		<field name="setting_value" type="X"/>
		<field name="setting_type" type="C2" size="6">
			<NOTNULL/>
			<descr>(bool|int|float|string|object)</descr>
		</field>
		<descr>Site settings.</descr>
	</table>
	
	<!--
	  *
	  * TABLE email_templates
	  *
	  -->
	<table name="email_templates">
		<field name="email_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="email_key" type="C2" size="30">
			<NOTNULL/>
			<descr>Unique identifier for this email.</descr>
		</field>
		<field name="enabled" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="1"/>
		</field>
		<field name="can_disable" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="1"/>
		</field>
		<field name="can_edit" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="1"/>
		</field>
		<descr>Email templates.</descr>
		<index name="email_templates_default_email_key">
			<col>email_key</col>
			<UNIQUE/>
		</index>
	</table>
	
	<!--
	  *
	  * TABLE email_templates_data
	  *
	  -->
	<table name="email_templates_data">
		<field name="email_key" type="C2" size="30">
			<KEY/>
			<descr>Unique identifier for this email.</descr>
		</field>
		<field name="locale" type="C2" size="5">
			<KEY/>
			<DEFAULT VALUE="en_US"/>
		</field>
		<field name="subject" type="C2" size="120">
			<NOTNULL/>
		</field>
		<field name="body" type="X"/>
		<field name="description" type="X"/>
		<descr>Default data for email templates.</descr>
	</table>
	
	<!--
	 *
	 * TABLE search_keyword_list
	 *
	 -->
	<table name="search_keyword_list">
		<field name="keyword_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="keyword_text" type="C2" size="60">
			<NOTNULL/>
		</field>
		<descr>List of all keywords.</descr>
		<index name="search_keyword_text">
			<col>keyword_text</col>
			<UNIQUE/>
		</index>
	</table>
	
	<!--
	 *
	 * TABLE search_objects
	 *
	 -->
	<table name="search_objects">
		<field name="object_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="record_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="raw_field_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="object_time" type="T"/>
		<descr>Indexed objects.</descr>
		<index name="search_object_record_time">
			<col>record_id</col>
			<col>object_time</col>
		</index>
	</table>
	
	<!--
	 *
	 * TABLE search_object_keywords
	 *
	 -->
	<table name="search_object_keywords">
		<field name="object_id" type="I8">
			<KEY/>
		</field>
		<field name="keyword_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="pos" type="I4">
			<KEY/>
			<descr>Word position of the keyword in the object.</descr>
		</field>
		<descr>Keyword occurrences for each indexed object.</descr>
		<index name="search_object_keywords_keyword_id">
			<col>keyword_id</col>
		</index>
	</table>

	<!--
	 *
	 * TABLE rt_versions
	 *
	 -->
	<table name="rt_versions">
		<field name="version_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="archive_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="version_key" type="C2" size="40">
			<NOTNULL/>
		</field>
		<field name="locale" type="C2" size="5">
			<DEFAULT VALUE="en_US"/>
		</field>
		<field name="title" type="C2" size="120">
			<NOTNULL/>
		</field>
		<field name="description" type="X"/>
		<descr>Reading Tools versions.</descr>
		<index name="rt_versions_archive_id">
			<col>archive_id</col>
		</index>
		<index name="rt_versions_version_key">
			<col>version_key</col>
		</index>
	</table>
	
	<!--
	 *
	 * TABLE rt_contexts
	 *
	 -->
	<table name="rt_contexts">
		<field name="context_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="version_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="title" type="C2" size="120">
			<NOTNULL/>
		</field>
		<field name="abbrev" type="C2" size="32">
			<NOTNULL/>
		</field>
		<field name="description" type="X"/>
		<field name="cited_by" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="author_terms" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="define_terms" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="geo_terms" type="I1">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<field name="seq" type="F">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<descr>Reading Tools contexts (within versions).</descr>
		<index name="rt_contexts_version_id">
			<col>version_id</col>
		</index>
	</table>
	
	<!--
	 *
	 * TABLE rt_searches
	 *
	 -->
	<table name="rt_searches">
		<field name="search_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="context_id" type="I8">
			<NOTNULL/>
		</field>
		<field name="title" type="C2" size="120">
			<NOTNULL/>
		</field>
		<field name="description" type="X"/>
		<field name="url" type="X"/>
		<field name="search_url" type="X"/>
		<field name="search_post" type="X"/>
		<field name="seq" type="F">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
		<descr>Reading Tools searches (within contexts).</descr>
		<index name="rt_searches_context_id">
			<col>context_id</col>
		</index>
	</table>

</schema>
